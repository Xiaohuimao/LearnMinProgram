<!--pages/home/home.wxml-->
<!-- 1,事件处理的回顾 -->
<button bindtap="handleButtonClick" size="mini">按钮</button>
<!-- 两种写法 -->
<button bind:tap="handleButtonClick" size="mini">按钮</button>
<button catch:tap="handleButtonClick" size="mini">按钮</button>

<!-- 2，常见的一些事件 -->
<view class="box" bind:touchstart="handleTouchStart"
bind:touchmove="handleTouchMove"
bind:touchend="handleTouchEnd"
bind:tap="handleTag"
bind:longpress="handleLongPress"></view>

<!-- 3,事件对象的分析 -->
<button id="btn" size="mini" bindtap="handleEventClick"
bindtouchend="handleEventEnd">事件对象</button>

<view class="outer" id="outer" bindtap="handleOuter">
  外层的view
  <view class="inner" bindtap="handleInner" id="inner">
    内层的view
  </view>
</view>

<!-- 4,事件的传递参数 -->
<!-- 通过data-属性来进行事件数据的传递，在event对象中拿到数据 -->
<view class="container">
<block wx:for="{{title}}" wx:key="index">
<view class="item" bindtap="handleItemClick" data-index="{{index}}"
data-item="{{item}}">{{item}}</view>
</block></view>

<!-- 5，事件冒泡和事件捕获，以及bind和catch的区别 -->
<!-- bind:一层层传递 -->
<!-- catch：阻止事件的进一步传递 -->
<view class="view1" capture-bind:tap="handleCapView1" bindtap="handleBindView1">
  <view class="view2" capture-bind:tap="handleCapView2" catchtap="handleBindView2">
    <view class="view3" bindtap="handleBindView3" capture-bind:tap="handleCapView3"></view>
  </view>
</view>