<!--pages/image/image.wxml-->
<!-- 1,image的基本使用 -->
<!-- 
重点：
  1，image组件可以写成单标签，也可以写成双标签
  2，image组件默认有自己的大小：320x240（固定）
  3，image组件是行内块元素（inline-block）
 -->
 <!-- <image></image>
 <image/>
 <text>哈哈</text> -->

 <!-- 2，src：本地路径（相对路径/绝对路径）/远程地址 -->
 <image src="../../assets/img01.jpg"/>
 <!-- 绝对路径，小程序中，使用/来表示根目录 -->
 <image src="/assets/img01.jpg"></image>
 <!-- 远程图片 -->
 <image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>

 <!-- 补充：相册中的图片 -->
 <button bindtap="handleChooseAlbum">选中图片</button>
 <image src="{{imagePath}}"></image>

 <!-- 3,bindload: 监听图片加载完成 -->
 <!-- lazy-load:图片懒加载 -->
 <image wx:for="{{1}}" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" bindload="handleImageLoad"
 lazy-load></image>

 <!-- 4,show-menu-by-longpress: 长按图片，出现识别小程序码 -->
 <image src="/assets/img01.jpg"
 show-menu-by-longpress></image>